### yaml file examples

#1st file

apiVersion: v1
kind: Pod
metadata:
  name: edureka
spec:
  containers:
    - name: amit
      image: httpd

# 2nd file

apiVersion: v1
kind: Pod
metadata:
  name: edureka1
spec:
  containers:
    - name: amit
      image: httpd
      resources:
        limits:
          memory: "256Mi"
          cpu: "100m"

# 3rd file

apiVersion: v1
kind: Pod
metadata:
  name: edureka2
spec:
  containers:
    - name: amit
      image: httpd
      resources:
        limits:
          memory: "256Mi"
          cpu: "100m"



