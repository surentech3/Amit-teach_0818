### service type - clusterip
apiVersion: v1
kind: Service
metadata:
  name: edureka-clusterip
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: ClusterIP

## service type - nodeport

apiVersion: v1
kind: Service
metadata:
  name: edureka-nodeport
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort

### service type - loadbalancer

apiVersion: v1
kind: Service
metadata:
  name: edureka-nodeport
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: LoadBalancer

